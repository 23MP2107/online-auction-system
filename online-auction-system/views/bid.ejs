	<body>
		<%-include('navbar.ejs')%>
		<!-- Navbar links -->
		<!-- Selling form -->
		<form style="margin-top: 150px; margin-bottom: 120px;" class="selling-form" action="/bid" method="post">
			<h1>Add Bid</h1>
			<div  class="form-row">
			  <div class="form-group">
				<label for="product-name">Product Id</label>
				<input type="text" id="product-name" name="id" required value="<%=id%>" readonly>
			  </div>
			  <div class="form-group">
				<label for="starting-price">Bid Amount</label>
				<input type="number" id="starting-price" name="amount" min="0" step="0.01" required>
			  </div>
			</div>
	
			<div class="form-row">
			  <div class="form-group">
				<button type="submit">Submit</button>
			  </div>
			</div>
		  </form>

		  
