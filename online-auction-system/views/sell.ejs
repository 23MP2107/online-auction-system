	<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
	<link rel="stylesheet" href="/css/style.css">
	<title>OAS-Sell Your Products</title>
	<link rel="icon" type="image/x-icon" href="/images/Main/Logo.png">
	</head>
	<body>
		<%-include('navbar.ejs')%>
		<!-- Navbar links -->
		<!-- Selling form -->
		<form style="margin-top: 150px; margin-bottom: 120px;" class="selling-form" action="/sell" method="post">
			<h1>List your Product </h1>
			<div  class="form-row">
			  <div class="form-group">
				<label for="product-name">Product Name</label>
				<input type="text" id="product-name" name="name" required >
			  </div>
			  <div class="form-group">
				<label for="starting-price">Expected Price</label>
				<input type="number" id="starting-price" name="price" min="0" step="0.01" required>
			  </div>
			</div>
			<div class="form-row">
			  <div class="form-group">
				<label for="description">Description</label>
				<textarea id="description" name="description" required></textarea>
			  </div>
			</div>
			<div class="form-row">
			  <div class="form-group">
				<label for="category">Category</label>
				<select id="category" name="category" required>
				  <option value="">Select a category</option>
				  <option value="electronics">Electronics</option>
				  <option value="Fashion">Fashion </option>
				  <option value="Books ">Books </option>
				  <option value="Art">Art </option>
				  <option value="clothing">Clothing</option>
				  <option value="home">Home &amp; Garden</option>
				  <option value="sports">Sports &amp; Outdoors</option>
				</select>
			  </div>
			  <div class="form-group">
				<label for="condition">Condition</label>
				<select id="condition" name="condition" required>
				  <option value="">Select a condition</option>
				  <option value="new">New</option>
				  <option value="like-new">Like New</option>
				  <option value="used">Used</option>
				</select>
			  </div>
			</div>
	
			<div class="form-row">
			  <div class="form-group">
				<button type="submit">Submit</button>
			  </div>
			</div>
		  </form>

		  
        <!-- Footer -->
		<footer  class="page-footer">
		<div class="text-center">Â© 2024 Copyright: OAS. All right reserved.
	  	</div>
		</footer>
		<!-- Footer -->
		
		  <script src="script.js"></script>

	</body>
</html>
